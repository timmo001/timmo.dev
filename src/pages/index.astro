---
// Component Imports
import MainHead from "../components/MainHead.astro";

import Button from "../components/Button/index.jsx";
import Footer from "../components/Footer/index.jsx";
import Hero from "../components/Hero/index.jsx";
import Nav from "../components/Nav/index.jsx";
import PostPreview from "../components/PostPreview/index.jsx";

// Data Fetching: List all Markdown posts in the repo.
const contributions = (await Astro.glob("./contributions/**/*.md"))
  .filter(({ frontmatter }) => !!frontmatter.publishDate)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  )
  .slice(0, 6);
const software = (await Astro.glob("./software/**/*.md"))
  .filter(({ frontmatter }) => !!frontmatter.publishDate)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  )
  .slice(0, 6);
const projects = (await Astro.glob("./project/**/*.md"))
  .filter(({ frontmatter }) => !!frontmatter.publishDate)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  )
  .slice(0, 6);
const general = (await Astro.glob("./general/**/*.md"))
  .filter(({ frontmatter }) => !!frontmatter.publishDate)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  )
  .slice(0, 6);
---

<html lang="en">
  <head>
    <MainHead
      title="Aidan Timson (Timmo)"
      description="Tinkerer, Developer, PC Gamer, All Round Nerd - Aidan Timson (Timmo)"
    />
    <style lang="scss">
      .grid {
        display: grid;
        grid-gap: 2rem;

        @media (min-width: 1200px) {
          grid-template-columns: 1fr 1fr;
        }
      }

      .sectionTitle {
        font-weight: 700;
        font-size: var(--f-u8);
        margin-top: 4rem;
        margin-bottom: 2rem;
      }

      .desc {
        font-size: var(--f-u2);
        margin-top: 1.5rem;
        margin-bottom: 0;
      }

      .bio {
        line-height: 2;
        margin-bottom: 2rem;

        > span:first-of-type {
          line-height: 1;
          margin-bottom: 0.5em;
          display: block;
          font-weight: 700;
          font-size: var(--f-u4);
        }
      }
    </style>
  </head>
  <body>
    <Nav client:load />
    <Hero />
    <main class="wrapper mt4 mb4">
      <div class="section">
        <h3 class="sectionTitle">About me</h3>
        <p class="bio">
          My name is Aidan, but you may know me better as <a
            href="https://github.com/timmo001"
            target="_blank"
          >
            Timmo
          </a> or <a href="https://twitter.com/timmo001" target="_blank">
            @timmo001
          </a>
        </p><p>
          <a href="/about">Read more</a>
        </p>
      </div>
      <div class="section">
        <h3 class="sectionTitle">Software</h3>
        <div class="grid">
          {software.map((post) => <PostPreview post={post} />)}
        </div>
        <div class="tac mt4">
          <a href="/software">
            <Button>View All</Button>
          </a>
        </div>
      </div>
      <div class="section">
        <h3 class="sectionTitle">Projects</h3>
        <div class="grid">
          {projects.map((post) => <PostPreview post={post} />)}
        </div>
        <div class="tac mt4">
          <a href="/projects">
            <Button>View All</Button>
          </a>
        </div>
      </div>
      <div class="section">
        <h3 class="sectionTitle">Contributions</h3>
        <div class="grid">
          {contributions.map((post) => <PostPreview post={post} />)}
        </div>
        <div class="tac mt4">
          <a href="/contributions">
            <Button>View All</Button>
          </a>
        </div>
      </div>
      <div class="section">
        <h3 class="sectionTitle">General</h3>
        <div class="grid">
          {general.map((post) => <PostPreview post={post} />)}
        </div>
        <div class="tac mt4">
          <a href="/general">
            <Button>View All</Button>
          </a>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
